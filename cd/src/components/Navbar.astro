---
const navItems = [
  { name: "Home", href: "/" },
  { name: "Products", href: "/products" },
  { name: "Cart", href: "/cart" },
  { name: "Checkout", href: "/checkout" },
  { name: "About Us", href: "/about" },
  { name: "Contact", href: "/contact" },
];
---

<nav>
  <div>
    <h1>Astro Analytics</h1>
  </div>
  <ul>
    {
      navItems.map((item) => (
        <li>
          <a href={item.href}>{item.name}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav ul {
    list-style: none;
    display: flex;
    gap: 10px;
    justify-content: center;
    align-items: center;
  }
  nav a {
    text-decoration: none;
    color: inherit;
  }

  nav a:hover{
    color: orange;
    font-weight: 800;
  }

  nav {
    display: flex;
    justify-content: space-between;
    justify-items: center;
    padding: 0 20px;
    color: white;
    background-color: black;
    align-items: center;
  }
</style>
